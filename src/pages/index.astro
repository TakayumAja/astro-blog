---
import Layout from "../layouts/Layout.astro";
import BlogCard from "../components/BlogCard.astro";
const allPost = await Astro.glob("../pages/posts/*.md");
---

<Layout title="takayums">
  <!-- Banner -->
  <div class="w-max-4xl mb-8">
    <img src="/programmer.jpg" class="w-full md:h-[400px] object-cover rounded-2xl" />
  </div>

  <h3 class="text-2xl font-bold">Post Blog</h3>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-8">
    {
      allPost.map(post => (
        <BlogCard
          url={post.url}
          title={post.frontmatter.title}
          pubDate={post.frontmatter.pubDate}
          author={post.frontmatter.author}
          tags={post.frontmatter.tags}
        />
      ))
    }
  </div>
</Layout>
